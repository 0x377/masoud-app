# Laravel Application
APP_NAME="Laravel Dev"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Riyadh

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=masooud_db
DB_USERNAME=manage
DB_PASSWORD=Master@123

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=redispass
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@laravel.dev"
MAIL_FROM_NAME="${APP_NAME}"

# Debugging
XDEBUG_MODE=develop,debug
XDEBUG_CONFIG="client_host=host.docker.internal"
PHP_IDE_CONFIG="serverName=laravel.local"

# Development Features
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
HORIZON_PREFIX=horizon:
SCOUT_DRIVER=database

# Custom
DEV_MODE=true
SKIP_COMPOSER_INSTALL=false
RUN_MIGRATIONS=true
RUN_SEEDERS=false
